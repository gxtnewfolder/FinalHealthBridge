@{
    ViewData["Title"] = "Patient";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Search Patient</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SearchResult">
            <div class="form-group">
                <label for="SearchText" class="control-label">Name</label>
                <input name="SearchText" class="form-control" />
            </div> 
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary my-3" />
            </div>
        </form>
    </div>
</div>

<div>
    @if (User.IsInRole("Admin") || User.IsInRole("Doctor") || User.IsInRole("Dev"))
    {
        <a asp-action="Index">Back to List</a>
    }
    else
    {
        <a asp-controller="Home" asp-action="Index">Back to List</a>
    }
</div>
